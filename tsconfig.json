{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
